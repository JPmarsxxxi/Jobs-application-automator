# Environment Configuration
ENVIRONMENT=development  # development, production, test

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_VISION_MODEL=llava:13b
OLLAMA_TEXT_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=300  # seconds

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=config/credentials.json
GMAIL_TOKEN_PATH=config/token.json

# LinkedIn Credentials (for login)
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_password

# Browser Configuration
HEADLESS_MODE=false  # Set to true for background operation
BROWSER_TIMEOUT=30000  # milliseconds

# Rate Limiting
LINKEDIN_REQUESTS_PER_MINUTE=20
LINKEDIN_APPLICATIONS_PER_HOUR=30
LINKEDIN_MAX_DAILY_APPLICATIONS=50

INDEED_REQUESTS_PER_MINUTE=30
INDEED_APPLICATIONS_PER_HOUR=40

REED_REQUESTS_PER_MINUTE=25
REED_APPLICATIONS_PER_HOUR=35

# Application Settings
DRY_RUN=true  # Set to false to actually submit applications
MANUAL_APPROVAL=true  # Set to false for fully automatic operation
SCREENSHOT_ENABLED=true
SAVE_GENERATED_MATERIALS=true

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Workspace Paths (relative to project root)
WORKSPACE_DIR=workspace
PORTFOLIO_DIR=workspace/portfolio
GENERATED_MATERIALS_DIR=workspace/generated_materials
SCREENSHOTS_DIR=workspace/screenshots
LOGS_DIR=workspace/logs

# User Information (will be filled from config/user_info.py)
USER_NAME=
USER_EMAIL=
USER_PHONE=
USER_LOCATION=

# Notification Settings
SEND_DAILY_SUMMARY=true
SUMMARY_EMAIL_TIME=20:00  # 8pm GMT
